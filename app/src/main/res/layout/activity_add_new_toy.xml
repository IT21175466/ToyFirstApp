<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewToy">

    <TextView
        android:id="@+id/add_new_toy_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add A New Toy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/toy_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Enter The Toy Name"
        app:layout_constraintTop_toBottomOf="@id/add_new_toy_txt"
        android:layout_marginTop="25dp"
        />

    <EditText
        android:id="@+id/toy_price_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Enter The Price"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/toy_name_txt"
        />

    <EditText
        android:id="@+id/toy_quantity_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Enter Quantity"
        app:layout_constraintTop_toBottomOf="@id/toy_price_txt"
        />

    <EditText
        android:id="@+id/toy_category_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:hint="Enter Category"
        app:layout_constraintTop_toBottomOf="@id/toy_quantity_txt"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_toy_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add Toy"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/purple_700"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/toy_category_txt"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>